/* pages/application/application.wxss */

page {
  background-color: #f8f8f1;
}

image.top-img {
  width: 100%;
  height: auto;
}

.form-group {
  border-bottom: 1px solid #ddd;
  padding: 10px 0;
  display: flex;
  align-items: baseline;
}

.form-group:last-child {
  border: none;
}

.form-group label {
  color: #404241;
  width: 30%;
  box-sizing: content-box;
  display: inline-block;
  text-align: right;
  margin-right: 20px;
}

.form-group input, .form-group text, .form-group radio-group{
  width: calc(70% - 20px);
}

.placeholder {
  color: #cbcbd2;
}

.form-group .time {
  color: #404241;
  font-size: 16px;
}

.form-group radio-group radio {
  color: #404241;
  margin-right: 15px;
}

.form-group.reason {
  align-items: flex-start;
}

textarea#reason {
  width: calc(70% - 30px);
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 5px;
  display: block;
}

.btn-group {
  width: 100%;
  padding: 20px 0;
  text-align: center;
}

.btn-group button:first-child {
    margin-right: 20px;
}

.btn-group button {
  color: #fff;
  font-size: 12px;
  background-color: #00a0b4;
  padding: 10px 25px;
  line-height: 1;
  display: inline-block;
}
