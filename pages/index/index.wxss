/* pages/index/index.wxss */
page {
  background: #f8f8f1;
}

.wrapper {
  width:450rpx;
  height:450rpx;
  margin: 0 auto;
  margin-top: calc(50vh - 225rpx);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.condition, .apply, .my {
  box-sizing: border-box;
  padding: 0 10px;
  font-size: 20px;
  text-align: center;
  color: #fff;
  box-shadow: 5px 5px 5px #999;
  text-shadow: -2px -1px 1px #333;
}

.wrapper .condition {
  flex-basis: 45.5%;
  padding-top: 180rpx;
  background: #f57887;
}

.wrapper .right {
  flex-basis: 51%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.wrapper .right .apply {
  flex-basis: 53.5%;
  padding-top: 80rpx;
  background: #f6daab;
}

.wrapper .right .my {
  flex-basis: 43.5%;
  padding-top: 40rpx;
  background: #a2e8cc;
}

